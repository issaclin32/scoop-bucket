{
    "version": "3.7.7",
    "description": "Python 3.7.7 with packages required for e-AI 2.2.0 (install in default location)",
    "homepage": "https://www.python.org/",
    "license": "Python-2.0",
    "depends": "refreshenv",
    "architecture": {
        "64bit": {
            "url": "https://www.python.org/ftp/python/3.7.7/python-3.7.7-amd64.exe#/setup.exe",
            "hash": "1a0368663ceff999d865de955992b6ea3cb0c8cb15a1a296a8eb7df19cc59e69"
        }
    },
    "installer": {
        "script": [
            "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
            "Start-Process -Wait \"$dir\\setup.exe\" -ArgumentList @('/quiet', 'InstallAllUsers=1', 'PrependPath=1') -Verb RunAs",
            "refreshenv",
            "python -m pip install -U pip"
        ]
    },
    "uninstaller": {
        "script": [
            "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
            "Start-Process -Wait \"$dir\\setup.exe\" -ArgumentList @('/uninstall', '/quiet') -Verb RunAs"
        ]
    }
}
